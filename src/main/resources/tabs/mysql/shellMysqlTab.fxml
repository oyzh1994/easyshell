<?xml version="1.0" encoding="UTF-8"?>

<?import cn.oyzh.easyshell.filter.redis.ShellRedisKeyFilterTextField?>
<?import cn.oyzh.easyshell.trees.mysql.DBTreeView?>
<?import cn.oyzh.fx.gui.svg.glyph.ExportSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.ImportSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.PositioningSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.TransportSVGGlyph?>
<?import cn.oyzh.fx.gui.tabs.RichTabPane?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<FXHBox flexWidth="100%" xmlns:fx="http://javafx.com/fxml/1" flexHeight="100%"
        fx:controller="cn.oyzh.easyshell.tabs.mysql.ShellMysqlTabController">
    <FXVBox prefWidth="300" flexHeight="100%" fx:id="leftBox">
        <FXHBox realHeight="30" flexWidth="100%">
            <ShellRedisKeyFilterTextField onAction="#doFilter" onSearch="#doFilter" fx:id="filterKW" realHeight="24"
                                          flexWidth="100% - 5" tipText="%base.searchKWTip" maxLen="30">
                <HBox.margin>
                    <Insets left="5" top="3"/>
                </HBox.margin>
            </ShellRedisKeyFilterTextField>
        </FXHBox>
        <DBTreeView flexWidth="100%" fx:id="treeView" flexHeight="100% - 60">

        </DBTreeView>
        <FXHBox flexWidth="100%" flexHeight="30">
            <ImportSVGGlyph tipText="%base.importData" onMousePrimaryClicked="#importData">
                <HBox.margin>
                    <Insets left="5" top="5"/>
                </HBox.margin>
            </ImportSVGGlyph>
            <ExportSVGGlyph tipText="%base.exportData" size="16"
                            onMousePrimaryClicked="#exportData">
                <HBox.margin>
                    <Insets left="5" top="5"/>
                </HBox.margin>
            </ExportSVGGlyph>
            <TransportSVGGlyph tipText="%base.transportData" size="16"
                               onMousePrimaryClicked="#transportData">
                <HBox.margin>
                    <Insets left="5" top="5"/>
                </HBox.margin>
            </TransportSVGGlyph>
            <PositioningSVGGlyph size="17" onMousePrimaryClicked="#positionNode">
                <HBox.margin>
                    <Insets left="5" top="5"/>
                </HBox.margin>
            </PositioningSVGGlyph>
        </FXHBox>
    </FXVBox>
    <RichTabPane fx:id="tabPane" side="BOTTOM" tabClosingPolicy="ALL_TABS" flexWidth="100% - 305" flexHeight="100%"
                 rotateGraphic="true">
    </RichTabPane>
</FXHBox>