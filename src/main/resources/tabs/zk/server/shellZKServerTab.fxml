<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.gui.svg.glyph.ServerSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.plus.controls.tab.FXTabPane?>
<?import cn.oyzh.fx.plus.controls.table.FXTableColumn?>
<?import cn.oyzh.fx.plus.controls.table.FXTableView?>
<FXTab fx:id="root" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.oyzh.easyshell.tabs.zk.server.ShellZKServerTabController"
       text="%base.server">
    <graphic>
        <ServerSVGGlyph sizeStr="11"/>
    </graphic>
    <FXVBox flexHeight="100%" flexWidth="100%">
        <FXTableView flexWidth="100% - 10" realHeight="80" fx:id="serverTable">
            <columns>
                <FXTableColumn sortable="false" valueName="zxid" text="%base.id" flexWidth="8%"/>
                <FXTableColumn sortable="false" valueName="mode" text="%base.mode" flexWidth="10%"/>
                <FXTableColumn sortable="false" valueName="version" text="%base.version" flexWidth="8%"/>
                <FXTableColumn sortable="false" valueName="connections" text="%base.connections" flexWidth="10%"/>
                <FXTableColumn sortable="false" valueName="nodeCount" text="%base.nodeCount" flexWidth="10%"/>
                <FXTableColumn sortable="false" fx:id="latency" valueName="latencyInfo" text="%base.latency"
                               flexWidth="25%"/>
                <FXTableColumn sortable="false" fx:id="command" valueName="commandInfo" text="%base.cmd"
                               flexWidth="29% - 12"/>
            </columns>
        </FXTableView>
        <FXTabPane flexWidth="100% - 10" flexHeight="100% - 120">
            <fx:include fx:id="aggregation" source="shellZKAggregationTab.fxml"/>
            <fx:include fx:id="local" source="shellZKLocalTab.fxml"/>
            <fx:include fx:id="srvr" source="shellZKSrvrTab.fxml"/>
            <fx:include fx:id="conf" source="shellZKConfTab.fxml"/>
            <fx:include fx:id="envi" source="shellZKEnviTab.fxml"/>
            <fx:include fx:id="stat" source="shellZKStatTab.fxml"/>
            <fx:include fx:id="cluster" source="shellZKClusterTab.fxml"/>
        </FXTabPane>
    </FXVBox>
</FXTab>