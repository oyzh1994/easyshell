<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.easyshell.query.zk.ShellZKQueryEditor?>
<?import cn.oyzh.easyshell.trees.query.ShellQueryTreeView?>
<?import cn.oyzh.fx.gui.svg.glyph.QuerySVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.RunSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.SaveSVGGlyph?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.plus.controls.tab.FXTabPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<FXTab xmlns:fx="http://javafx.com/fxml/1" fx:controller="cn.oyzh.easyshell.tabs.zk.query.ShellZKQueryTabController"
       text="%base.queries">
    <graphic>
        <QuerySVGGlyph sizeStr="11"/>
    </graphic>
    <FXHBox flexHeight="100%" flexWidth="100%">
        <ShellQueryTreeView fx:id="queryTreeView" flexHeight="100%" prefWidth="240">

        </ShellQueryTreeView>
        <FXVBox fx:id="rightBox" flexWidth="100% - 240" flexHeight="100%">
            <FXHBox realHeight="30" flexWidth="100%">
                <SaveSVGGlyph size="16" onMousePrimaryClicked="#save" appendTipText="(CTRL/COMMAND+S)">
                    <HBox.margin>
                        <Insets left="5" top="7"/>
                    </HBox.margin>
                </SaveSVGGlyph>
                <RunSVGGlyph size="16" onMousePrimaryClicked="#run" appendTipText="(CTRL/COMMAND+R)">
                    <HBox.margin>
                        <Insets left="5" top="7"/>
                    </HBox.margin>
                </RunSVGGlyph>
            </FXHBox>
            <ShellZKQueryEditor onKeyPressed="#onContentKeyPressed" fx:id="content" promptText="%base.contentTip1"
                                flexWidth="100% - 10" flexHeight="100% - 40">
            </ShellZKQueryEditor>
            <FXTabPane tabClosingPolicy="UNAVAILABLE" fx:id="resultTabPane" flexWidth="100%" flexHeight="70%" managedBindVisible="true"
                       visible="false">
            </FXTabPane>
        </FXVBox>
    </FXHBox>
</FXTab>