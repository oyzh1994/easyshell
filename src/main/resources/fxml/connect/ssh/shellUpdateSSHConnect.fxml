<?import javafx.scene.layout.VBox?>
<FXVBox xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cn.oyzh.easyshell.controller.connect.ssh.ShellUpdateSSHConnectController" realWidth="750"
        realHeight="480">
    <FXTabPane fx:id="tabPane" flexWidth="100%" flexHeight="100% - 60">
        <FXTab text="%base.base">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.name">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField fx:id="name" tipText="%base.nameTip" maxLen="30" require="true" realHeight="30"
                                    flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.userName">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField fx:id="userName" tipText="%base.userNameTip" require="true" realHeight="30"
                                    flexWidth="100% - 180" maxLen="1024" text="root">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.auth">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <ShellAuthTypeComboBox initIndex="0" fx:id="authMethod" prefWidth="150" realHeight="30">
                        <FXHBox.margin>
                            <Insets left="30" top="5"/>
                        </FXHBox.margin>
                    </ShellAuthTypeComboBox>
                    <PasswordTextField fx:id="password" groupId="password" tipText="%base.passwordTip" require="true"
                                       realHeight="30"
                                       flexWidth="100% - 340">
                        <FXHBox.margin>
                            <Insets left="10" top="5"/>
                        </FXHBox.margin>
                    </PasswordTextField>
                    <ReadOnlyTextField realHeight="30" require="true" visible="false" managedBindVisible="true"
                                       groupId="sshAgent"
                                       fx:id="sshAgent" flexWidth="100% - 340">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </ReadOnlyTextField>
                    <ChooseFileTextField realHeight="30" require="true" visible="false" managedBindVisible="true"
                                         groupId="certificate"
                                         fx:id="certificate" flexWidth="100% - 445">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </ChooseFileTextField>
                    <PasswordTextField promptText="%base.passwordOptional" realHeight="30" require="true"
                                       visible="false" managedBindVisible="true"
                                       groupId="certificate"
                                       fx:id="certificatePwd" prefWidth="100">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </PasswordTextField>
                    <ShellKeyComboBox tipText="%base.privateKeyTip" realHeight="30" require="true" visible="false"
                                      managedBindVisible="true"
                                      groupId="sshKey"
                                      fx:id="key" flexWidth="100% - 340">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </ShellKeyComboBox>
                </FXHBox>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <ClearableTextField fx:id="hostIp" tipText="%base.hostTip" require="true" realHeight="30"
                                        flexWidth="60%" maxLen="1024">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PortTextField require="true" flexWidth="40% - 190" fx:id="hostPort" realHeight="30" value="22">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </PortTextField>
                </FXHBox>
                <InfoLabel text="%base.options">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <FXCheckBox enableFont="false" fx:id="enableCompress" text="%base.enableCompress" fontSize="11">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FXCheckBox>
                    <FXCheckBox enableFont="false" fx:id="enableZModem" text="%shell.connect.tip15" fontSize="11">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </FXCheckBox>
                    <FXCheckBox enableFont="false" fx:id="forwardAgent" text="ForwardAgent" fontSize="11">
                        <HBox.margin>
                            <Insets left="10" top="5"/>
                        </HBox.margin>
                    </FXCheckBox>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.extra">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.osType">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellOsTypeComboBox fx:id="osType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellOsTypeComboBox>
                <InfoLabel text="%base.connectTimeout">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <NumberTextField realHeight="30" flexWidth="100% - 180" min="3" max="30" fx:id="connectTimeOut"
                                     tipText="%shell.info.connectTimoutTip" value="5" require="true">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </NumberTextField>
                    <FXLabel text="%base.second">
                        <HBox.margin>
                            <Insets left="10" top="9"/>
                        </HBox.margin>
                    </FXLabel>
                </FXHBox>
                <InfoLabel text="%base.remark">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXTextArea fx:id="remark" realHeight="80" flexWidth="100% - 180" tipText="%base.remarkTip"
                            maxLen="100">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </FXTextArea>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.terminal">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.charset">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <CharsetComboBox fx:id="charset" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </CharsetComboBox>
                <InfoLabel text="%base.terminal">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermTypeComboBox fx:id="termType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellTermTypeComboBox>
                <InfoLabel text="%base.backspace">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermBackspaceTypeCombobox fx:id="backspaceType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellTermBackspaceTypeCombobox>
                <InfoLabel text="%base.env">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXTextArea fx:id="env" realHeight="120" flexWidth="100% - 180" tipText="%shell.connect.tip14">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </FXTextArea>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.proxy" fx:id="proxyTab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.enableProxy">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <SwitchToggleSwitch fx:id="enableProxy">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </SwitchToggleSwitch>
                <InfoLabel text="%base.protocol">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellProxyProtocolComboBox initIndex="0" disable="true" fx:id="proxyProtocol" tipText="%base.hostTip"
                                            require="true"
                                            realHeight="30"
                                            flexWidth="100% - 180" groupId="proxy">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellProxyProtocolComboBox>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" groupId="proxy">
                    <ClearableTextField fx:id="proxyHost" tipText="%base.hostTip" require="true" realHeight="30"
                                        flexWidth="100% - 285" maxLen="1024">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PortTextField realWidth="100" fx:id="proxyPort" require="true" realHeight="30" value="7890">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </PortTextField>
                </FXHBox>
                <InfoLabel text="%base.authMethod">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellProxyAuthTypeComboBox initIndex="0" disable="true" groupId="proxy" fx:id="proxyAuthType"
                                            realHeight="30"
                                            flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellProxyAuthTypeComboBox>
                <InfoLabel text="%base.authInfo">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox disable="true" fx:id="proxyAuthInfoBox" groupId="proxy">
                    <ClearableTextField fx:id="proxyUser" tipText="%base.userNameTip" require="true"
                                        realHeight="30"
                                        flexWidth="50% - 90">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <PasswordTextField fx:id="proxyPassword" tipText="%base.passwordTip" require="true"
                                       realHeight="30"
                                       flexWidth="50% - 95">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </PasswordTextField>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.tunneling">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <FXHBox realHeight="30">
                    <AddSVGGlyph onMousePrimaryClicked="#addTunneling">
                        <FXHBox.margin>
                            <Insets left="30" top="7"/>
                        </FXHBox.margin>
                    </AddSVGGlyph>
                    <EditSVGGlyph onMousePrimaryClicked="#updateTunneling">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </EditSVGGlyph>
                    <DeleteSVGGlyph onMousePrimaryClicked="#deleteTunneling">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </DeleteSVGGlyph>
                    <FXVBox.margin>
                        <Insets top="10"/>
                    </FXVBox.margin>
                </FXHBox>
                <ShellTunnelingTableView fx:id="tunnelingTableView" flexWidth="100% - 50" flexHeight="100% - 50">
                    <columns>
                        <FXTableColumn prefWidth="150" valueName="name" text="%base.name"/>
                        <FXTableColumn prefWidth="100" valueName="typeName" text="%base.type"/>
                        <FXTableColumn flexWidth="50% - 167.5" valueName="localHostName" text="%base.localHost"/>
                        <FXTableColumn flexWidth="50% - 167.5" valueName="remoteHostName" text="%base.remoteHost"/>
                        <FXTableColumn prefWidth="70" valueName="enabledStatus" text="%base.status"/>
                    </columns>
                    <FXVBox.margin>
                        <Insets left="30" top="7"/>
                    </FXVBox.margin>
                </ShellTunnelingTableView>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.jumpHosts">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <FXHBox realHeight="30">
                    <AddHostSVGGlyph onMousePrimaryClicked="#addHost">
                        <FXHBox.margin>
                            <Insets left="30" top="7"/>
                        </FXHBox.margin>
                    </AddHostSVGGlyph>
                    <AddSVGGlyph onMousePrimaryClicked="#addJump">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </AddSVGGlyph>
                    <EditSVGGlyph onMousePrimaryClicked="#updateJump">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </EditSVGGlyph>
                    <DeleteSVGGlyph onMousePrimaryClicked="#deleteJump">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </DeleteSVGGlyph>
                    <MoveUpSVGGlyph onMousePrimaryClicked="#moveJumpUp">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </MoveUpSVGGlyph>
                    <MoveDownSVGGlyph onMousePrimaryClicked="#moveJumpDown">
                        <FXHBox.margin>
                            <Insets left="5" top="7"/>
                        </FXHBox.margin>
                    </MoveDownSVGGlyph>
                    <FXVBox.margin>
                        <Insets top="10"/>
                    </FXVBox.margin>
                </FXHBox>
                <ShellJumpTableView fx:id="jumpTableView" flexWidth="100% - 50" flexHeight="100% - 50">
                    <columns>
                        <FXTableColumn prefWidth="150" valueName="name" text="%base.name"/>
                        <FXTableColumn flexWidth="100% - 365" valueName="host" text="%base.host"/>
                        <FXTableColumn prefWidth="100" valueName="port" text="%base.port"/>
                        <FXTableColumn prefWidth="100" valueName="enabledStatus" text="%base.status"/>
                    </columns>
                    <FXVBox.margin>
                        <Insets left="30" top="7"/>
                    </FXVBox.margin>
                </ShellJumpTableView>
            </FXVBox>
        </FXTab>
        <FXTab text="X11" fx:id="x11Tab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.options">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <FXToggleSwitch text="%shell.connect.tip1" fx:id="x11forwarding">
                        <FXHBox.margin>
                            <Insets left="30" top="5"/>
                        </FXHBox.margin>
                    </FXToggleSwitch>
                    <FXButton groupId="x11" text="%shell.connect.tip9" onMousePrimaryClicked="#downloadX11">
                        <FXHBox.margin>
                            <Insets left="10"/>
                        </FXHBox.margin>
                    </FXButton>
                </FXHBox>
                <InfoLabel text="%base.host">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField require="true" prefHeight="30" text="localhost" fx:id="x11Host"
                                    tipText="%base.contentTip1"
                                    flexWidth="100% - 380">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.port">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <PortTextField require="true" prefHeight="30" text="6000" fx:id="x11Port"
                                   tipText="%base.contentTip1"
                                   flexWidth="100% - 380">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </PortTextField>
                    <TipsLabel text="%shell.connect.tip10">
                        <HBox.margin>
                            <Insets left="5" top="10"/>
                        </HBox.margin>
                    </TipsLabel>
                </FXHBox>
                <InfoLabel text="cookie">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <ClearableTextField prefHeight="30" fx:id="x11Cookie"
                                        tipText="%base.contentTip1"
                                        flexWidth="100% - 380">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ClearableTextField>
                    <FXButton fx:id="x11CookieBth" text="%base.load" onMousePrimaryClicked="#loadX11Cookie">
                        <HBox.margin>
                            <Insets left="5" top="5"/>
                        </HBox.margin>
                    </FXButton>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.background" fx:id="backgroundTab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.enableBackground">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <SwitchToggleSwitch fx:id="enableBackground">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </SwitchToggleSwitch>
                <InfoLabel text="%base.file">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <!-- <FXHBox groupId="background" disable="true"> -->
                <ChooseFileTextField groupId="background" require="true" realHeight="30"
                                     flexWidth="100% - 180" fx:id="backgroundImage"
                                     tipText="%base.fileTip1" disable="true">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ChooseFileTextField>
                <!--     <ChooseSVGGlyph onMousePrimaryClicked="#chooseBackgroundImage"> -->
                <!--         <HBox.margin> -->
                <!--             <Insets left="5" top="9"/> -->
                <!--         </HBox.margin> -->
                <!--     </ChooseSVGGlyph> -->
                <!-- </FXHBox> -->
            </FXVBox>
        </FXTab>
    </FXTabPane>
    <FXHBox flexWidth="100%" realHeight="50">
        <TestButton onAction="#testConnect" iconSizePercent="0.8">
            <HBox.margin>
                <Insets left="30" top="10"/>
            </HBox.margin>
        </TestButton>
        <SubmitButton onAction="#update">
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FXHBox>
</FXVBox>
