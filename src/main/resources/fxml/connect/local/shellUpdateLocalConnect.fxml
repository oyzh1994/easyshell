<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.easyshell.fx.ShellOsTypeComboBox?>
<?import cn.oyzh.easyshell.fx.term.ShellTermBackspaceTypeCombobox?>
<?import cn.oyzh.easyshell.fx.term.ShellTermTypeComboBox?>
<?import cn.oyzh.fx.gui.button.CancelButton?>
<?import cn.oyzh.fx.gui.button.SubmitButton?>
<?import cn.oyzh.fx.gui.combobox.CharsetComboBox?>
<?import cn.oyzh.fx.gui.label.InfoLabel?>
<?import cn.oyzh.fx.gui.text.field.ChooseFileTextField?>
<?import cn.oyzh.fx.gui.text.field.ClearableTextField?>
<?import cn.oyzh.fx.gui.toggle.SwitchToggleSwitch?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.button.FXCheckBox?>
<?import cn.oyzh.fx.plus.controls.tab.FXTab?>
<?import cn.oyzh.fx.plus.controls.tab.FXTabPane?>
<?import cn.oyzh.fx.plus.controls.text.area.FXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<FXVBox xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cn.oyzh.easyshell.controller.connect.local.ShellUpdateLocalConnectController" realWidth="750"
        realHeight="400">
    <FXTabPane fx:id="tabPane" flexWidth="100%" flexHeight="100% - 60">
        <FXTab text="%base.base">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.name">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ClearableTextField fx:id="name" tipText="%base.nameTip" maxLen="30" require="true" realHeight="30"
                                    flexWidth="100% - 180">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ClearableTextField>
                <InfoLabel text="%base.osType">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellOsTypeComboBox fx:id="osType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellOsTypeComboBox>
                <InfoLabel text="%base.remark">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXTextArea fx:id="remark" realHeight="80" flexWidth="100% - 180" tipText="%base.remarkTip"
                            maxLen="100">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </FXTextArea>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.terminal">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.charset">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <CharsetComboBox fx:id="charset" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </CharsetComboBox>
                <InfoLabel text="%base.terminal">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermTypeComboBox initIndex="1" fx:id="termType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellTermTypeComboBox>
                <InfoLabel text="%base.backspace">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermBackspaceTypeCombobox fx:id="backspaceType" prefWidth="200" prefHeight="30">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellTermBackspaceTypeCombobox>
                <InfoLabel text="%base.options">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <FXCheckBox fx:id="altSendsEscape" text="%shell.term.tip21">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FXCheckBox>
                </FXHBox>
            </FXVBox>
        </FXTab>
        <FXTab text="%base.background" fx:id="backgroundTab">
            <FXVBox flexWidth="100%" flexHeight="100%">
                <InfoLabel text="%base.enableBackground">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <SwitchToggleSwitch fx:id="enableBackground">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </SwitchToggleSwitch>
                <InfoLabel text="%base.file">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <!-- <FXHBox groupId="background" disable="true"> -->
                <ChooseFileTextField groupId="background" require="true" realHeight="30"
                                     flexWidth="100% - 180" fx:id="backgroundImage"
                                     tipText="%base.fileTip1" disable="true">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ChooseFileTextField>
                <!-- <ChooseSVGGlyph onMousePrimaryClicked="#chooseBackgroundImage"> -->
                <!--     <HBox.margin> -->
                <!--         <Insets left="5" top="9"/> -->
                <!--     </HBox.margin> -->
                <!-- </ChooseSVGGlyph> -->
                <!-- </FXHBox> -->
            </FXVBox>
        </FXTab>
    </FXTabPane>
    <FXHBox flexWidth="100%" realHeight="50">
        <SubmitButton onAction="#update">
            <HBox.margin>
                <Insets left="30" top="10"/>
            </HBox.margin>
        </SubmitButton>
        <CancelButton>
            <HBox.margin>
                <Insets left="15" top="10"/>
            </HBox.margin>
        </CancelButton>
    </FXHBox>
</FXVBox>
