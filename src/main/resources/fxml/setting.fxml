                    <FontSizeComboBox realHeight="30" flexWidth="100% - 225" fx:id="editorFontSize">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FontSizeComboBox>
                    <UndoSVGGlyph tipText="%base.reset" size="16" onMousePrimaryClicked="#resetEditorFontSize">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
