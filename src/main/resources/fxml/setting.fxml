                </FXToggleSwitch>
                <InfoLabel text="%shell.connect.tip11">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXToggleSwitch fx:id="efficiencyMode">
                    <VBox.margin>
                        <Insets left="30"/>
                    </VBox.margin>
                </FXToggleSwitch>
                <InfoLabel text="%shell.connect.tip2" groupId="x11">
