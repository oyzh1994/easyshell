                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ThemeComboBox>
                <InfoLabel text="%base.fgColor">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox fx:id="fgColorBox" disable="true">
                    <FXColorPicker realHeight="30" flexWidth="100% - 225" tipText="%base.fgColorTip"
                                   fx:id="fgColor">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FXColorPicker>
                    <UndoSVGGlyph tipText="%base.reset" size="16" onMousePrimaryClicked="#resetFgColor">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
                </FXHBox>
                <InfoLabel text="%base.bgColor">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox fx:id="bgColorBox" disable="true">
                    <FXColorPicker realHeight="30" flexWidth="100% - 225" tipText="%base.bgColorTip"
                                   fx:id="bgColor">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FXColorPicker>
                    <UndoSVGGlyph size="16" onMousePrimaryClicked="#resetBgColor">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
                </FXHBox>
                <InfoLabel text="%base.accentColor">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox fx:id="accentColorBox" disable="true">
                    <FXColorPicker realHeight="30" flexWidth="100% - 225" tipText="%base.accentColorTip"
                                   fx:id="accentColor">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FXColorPicker>
                    <UndoSVGGlyph size="16" onMousePrimaryClicked="#resetAccentColor">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
                </FXHBox>
            </FXVBox>
            <FXVBox managedBindVisible="true" visible="false" fx:id="locale_box" flexWidth="100%" flexHeight="100%"
                    groupId="setting_item">
                <InfoLabel text="%base.language">
                    <VBox.margin>
                        <Insets left="30"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <LocaleComboBox realHeight="30" flexWidth="100% - 225" initIndex="0" fx:id="locale">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </LocaleComboBox>
                    <UndoSVGGlyph size="16" onMousePrimaryClicked="#resetLocale">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
                </FXHBox>
            </FXVBox>
        </FXVBox>
    </right>
    <action>
        <SettingRightAction flexWidth="100%" realHeight="50">
            <SaveButton onAction="#saveSetting">
                <HBox.margin>
                    <Insets left="30" top="20"/>
                </HBox.margin>
            </SaveButton>
            <CancelButton>
                <HBox.margin>
                    <Insets left="15" top="20"/>
                </HBox.margin>
            </CancelButton>
        </SettingRightAction>
    </action>
</SettingMainPane>
