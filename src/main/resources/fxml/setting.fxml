                <ShellShortcutKeyTableView flexWidth="100%" flexHeight="100%">
                    <columns>
                        <FXTableColumn flexWidth="50%" valueName="key" text="%base.shortcutKey"/>
                        <FXTableColumn flexWidth="50% - 42" valueName="value" text="%base.desc"/>
                    </columns>
                </ShellShortcutKeyTableView>
                <VBox.margin>
                    <Insets left="30"/>
                </VBox.margin>
            </FXVBox>
            <FXVBox managedBindVisible="true" visible="false" fx:id="font_general_box" flexWidth="100%"
                    flexHeight="100%" groupId="setting_item">
                <InfoLabel text="%base.fontName">
                    <VBox.margin>
                        <Insets left="30"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <FontFamilyTextField realHeight="30" flexWidth="100% - 225" fx:id="fontFamily">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </FontFamilyTextField>
                    <UndoSVGGlyph tipText="%base.reset" size="16" onMousePrimaryClicked="#resetFontFamily">
                        <HBox.margin>
                            <Insets left="10" top="10"/>
                        </HBox.margin>
                    </UndoSVGGlyph>
                </FXHBox>
                <InfoLabel text="%base.fontSize">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <FontSizeComboBox realHeight="30" flexWidth="100% - 225" fx:id="fontSize">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
