                <InfoLabel text="%shell.connect.tip4">
                    <VBox.margin>
                        <Insets left="30"/>
                    </VBox.margin>
                </InfoLabel>
                <FXHBox>
                    <ShellTemShellComboBox prefHeight="30" fx:id="termType" flexWidth="100% - 190">
                        <HBox.margin>
                            <Insets left="30" top="5"/>
                        </HBox.margin>
                    </ShellTemShellComboBox>
                    <FXButton text="%base.test" onMousePrimaryClicked="#testBashPath">
                        <HBox.margin>
                            <Insets left="3" top="5"/>
                        </HBox.margin>
                    </FXButton>
                </FXHBox>
                <InfoLabel text="%base.maxLineCount">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <NumberTextField prefHeight="30" step="100" flexWidth="100% - 140" value="5000" minVal="100"
                                 maxVal="10000"
                                 fx:id="termMaxLineCount">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </NumberTextField>
                <InfoLabel text="%base.cursorBlinks">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermCursorComboBox prefHeight="30" flexWidth="100% - 140" initIndex="2" fx:id="termCursorBlinks">
                    <VBox.margin>
                        <Insets left="30" top="5"/>
                    </VBox.margin>
                </ShellTermCursorComboBox>
                <InfoLabel text="%base.refreshRate">
                    <VBox.margin>
                        <Insets left="30" top="10"/>
                    </VBox.margin>
                </InfoLabel>
                <ShellTermFpsComboBox prefHeight="30" flexWidth="100% - 140" initIndex="2" fx:id="termFps">
                    <VBox.margin>
