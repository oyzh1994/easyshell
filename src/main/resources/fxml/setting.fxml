        <SettingRightAction flexWidth="100%" realHeight="50">
            <SaveButton onAction="#saveSetting">
                <HBox.margin>
                    <Insets left="30" top="20"/>
                </HBox.margin>
            </SaveButton>
            <CancelButton>
                <HBox.margin>
                    <Insets left="15" top="20"/>
                </HBox.margin>
            </CancelButton>
        </SettingRightAction>
    </action>
