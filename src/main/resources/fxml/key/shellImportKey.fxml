<?xml version="1.0" encoding="UTF-8"?>
<?import cn.oyzh.fx.gui.button.CancelButton?>
<?import cn.oyzh.fx.gui.button.ImportButton?>
<?import cn.oyzh.fx.gui.label.InfoLabel?>
<?import cn.oyzh.fx.gui.svg.glyph.ChooseSVGGlyph?>
<?import cn.oyzh.fx.gui.svg.glyph.PasteSVGGlyph?>
<?import cn.oyzh.fx.gui.text.field.ClearableTextField?>
<?import cn.oyzh.fx.gui.text.field.PasswordTextField?>
<?import cn.oyzh.fx.gui.text.field.ReadOnlyTextField?>
<?import cn.oyzh.fx.plus.controls.box.FXHBox?>
<?import cn.oyzh.fx.plus.controls.box.FXVBox?>
<?import cn.oyzh.fx.plus.controls.FXHeaderBar?>
<?import cn.oyzh.fx.plus.controls.text.area.FXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<FXVBox xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="cn.oyzh.easyshell.controller.key.ShellImportKeyController" realWidth="750"
        realHeight="700">
    <FXHeaderBar/>
    <InfoLabel text="%base.name">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <ClearableTextField fx:id="name" tipText="%base.nameTip" maxLen="30" require="true" realHeight="30"
                        flexWidth="100% - 180">
        <VBox.margin>
            <Insets left="30" top="5"/>
        </VBox.margin>
    </ClearableTextField>
    <InfoLabel text="%base.type">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <ReadOnlyTextField fx:id="keyType" realHeight="30" flexWidth="100% - 180">
        <VBox.margin>
            <Insets left="30" top="5"/>
        </VBox.margin>
    </ReadOnlyTextField>
    <InfoLabel text="%base.length">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <ClearableTextField fx:id="keyLength" realHeight="30" flexWidth="100% - 180">
        <VBox.margin>
            <Insets left="30" top="5"/>
        </VBox.margin>
    </ClearableTextField>
    <InfoLabel text="%base.password">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <PasswordTextField fx:id="keyPassword" tipText="%base.optional" realHeight="30" flexWidth="100% - 180">
        <VBox.margin>
            <Insets left="30" top="5"/>
        </VBox.margin>
    </PasswordTextField>
    <InfoLabel text="%base.publicKey">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <FXHBox>
        <FXTextArea fx:id="publicKey" realHeight="100" flexWidth="100% - 180">
            <FXHBox.margin>
                <Insets left="30" top="5"/>
            </FXHBox.margin>
        </FXTextArea>
        <FXVBox>
            <PasteSVGGlyph tipText="%base.paste" onMousePrimaryClicked="#pastePubKey">
                <VBox.margin>
                    <Insets left="10" top="10"/>
                </VBox.margin>
            </PasteSVGGlyph>
            <ChooseSVGGlyph tipText="%base.choose" onMousePrimaryClicked="#choosePubKey">
                <VBox.margin>
                    <Insets left="10" top="10"/>
                </VBox.margin>
            </ChooseSVGGlyph>
        </FXVBox>
    </FXHBox>
    <InfoLabel text="%base.privateKey">
        <VBox.margin>
            <Insets left="30" top="10"/>
        </VBox.margin>
    </InfoLabel>
    <FXHBox>
        <FXTextArea fx:id="privateKey" realHeight="120" flexWidth="100% - 180">
            <FXHBox.margin>
                <Insets left="30" top="5"/>
            </FXHBox.margin>
        </FXTextArea>
        <FXVBox>
            <PasteSVGGlyph tipText="%base.paste" onMousePrimaryClicked="#pastePriKey">
                <VBox.margin>
                    <Insets left="10" top="10"/>
                </VBox.margin>
            </PasteSVGGlyph>
            <ChooseSVGGlyph tipText="%base.choose" onMousePrimaryClicked="#choosePriKey">
                <VBox.margin>
                    <Insets left="10" top="10"/>
                </VBox.margin>
            </ChooseSVGGlyph>
        </FXVBox>
    </FXHBox>
    <FXHBox flexWidth="100%">
        <ImportButton tipText="%base.import" onAction="#importKey" iconSizePercent="0.8">
            <HBox.margin>
                <Insets left="30" top="20"/>
            </HBox.margin>
        </ImportButton>
        <CancelButton tipText="%base.cancel">
            <HBox.margin>
                <Insets left="15" top="20"/>
            </HBox.margin>
        </CancelButton>
    </FXHBox>
</FXVBox>
